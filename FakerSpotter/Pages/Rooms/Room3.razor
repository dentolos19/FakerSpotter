@page "/room3"

<RoomPanel RoomName="@string.Format("Room 3: Spot the fake news! ({0}/3)", QuestionsAnswered)" IsCompleted="UserSettings.IsRoomThreeCompleted" IsLocked="!UserSettings.IsRoomTwoCompleted" NextRoomEndpoint="finish" PreviousRoomEndpoint="room2">
    <RoomContent>
        <Alert Color="Color.Info" Visible="true">
            <AlertMessage>Info</AlertMessage>
            <AlertDescription>The news shown are extracted from real-world articles, so you are able to research whether if its real or fake!</AlertDescription>
        </Alert>
        @QuestionPanel
    </RoomContent>
</RoomPanel>

@code
{

    [Inject] private NavigationManager NavigationManager { get; set; }
    [Inject] private HttpClient HttpClient { get; set; }
    [Inject] private Random Random { get; set; }

    private int PointsScored { get; set; } = 500;
    private int QuestionsAnswered { get; set; }
    private NewsQuestion[] Questions { get; set; }
    private RenderFragment QuestionPanel { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Questions = JsonSerializer.Deserialize<NewsQuestion[]>(await HttpClient.GetStringAsync("data/news.json"));
        NextQuestion();
    }

    private void OnQuestionCompleted(bool answeredCorrectly)
    {
        if (answeredCorrectly)
        {
            QuestionsAnswered++;
        }
        else
        {
            QuestionsAnswered = 0;
            PointsScored -= Random.Next(0, 100);
            if (PointsScored < 100)
                NextRoom();
        }
        if (QuestionsAnswered < 3)
        {
            NextQuestion();
        }
        else
        {
            NextRoom();
        }
    }

    private RenderFragment BuildQuestion(NewsQuestion question) => builder =>
    {
        builder.OpenComponent(0, typeof(NewsPanel));
        builder.AddAttribute(1, "Question", question);
        builder.AddAttribute(2, "OnComplete", EventCallback.Factory.Create<bool>(this, OnQuestionCompleted));
        builder.CloseComponent();
    };

    private void NextQuestion()
    {
        var question = Questions[Random.Next(Questions.Length)];
        QuestionPanel = BuildQuestion(question);
    }

    private void NextRoom()
    {
        UserSettings.PointsAccumulated += PointsScored;
        UserSettings.IsRoomThreeCompleted = true;
        NavigationManager.NavigateTo("finish");
    }

}