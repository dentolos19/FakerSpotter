@page "/about"

<Animate Animation="Animations.Fade" Duration="TimeSpan.FromSeconds(2)">
    <Heading Size="HeadingSize.Is3" TextAlignment="TextAlignment.Center">About</Heading>
    <Divider/>
    <MarkdownPanel Content="@MarkdownContent"/>
    <Paragraph TextAlignment="TextAlignment.Center">
        <Button Color="Color.Primary" Type="ButtonType.Link" To="">Back</Button>
    </Paragraph>
</Animate>

@code
{

    [Inject] private HttpClient HttpClient { get; set; }

    private string MarkdownContent { get; set; }

    protected override async Task OnInitializedAsync()
    {
        MarkdownContent = await HttpClient.GetStringAsync("data/about.md");
    }

}